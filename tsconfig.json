{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/*", "src/**/*.ts"]
}
